				<Menu id="togleMenu" platform="android">
					<MenuItem id="item1"
						title="Item 1"
						onClick="item"
						showAsAction="Ti.Android.SHOW_AS_ACTION_IF_ROOM" />
					<MenuItem id="item2"
						title="Item 2"
						onClick="mainMenu"
						showAsAction="Ti.Android.SHOW_AS_ACTION_COLLAPSE_ACTION_VIEW" />
				
