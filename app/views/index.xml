<Alloy>
	<Window class="container" >
		<View class="content" layout="vertical">
			
			<ActionBar id="actionbar" platform="android"  class="tool_bar" >
				<Menu>
					<MenuItem id="editItem" title="Edit" onClick="editInfo" />
					<MenuItem id="viewItem" title="View" onClick="viewInfo" />
				</Menu>
			</ActionBar>
			
			<View class="subtitle"><Label>Marque sua consulta</Label></View>
			<View layout="vertical" class="bodyContainer">
				<ImageView class="especialidade" onClick="showEspecialidade"> </ImageView>
				<Label>Especialidades</Label>
				<ImageView class="parteCorpo"></ImageView>
				<Label>Partes do corpo</Label>
			</View>
		</View>
		
	</Window>
</Alloy>